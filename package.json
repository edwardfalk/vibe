{
  "name": "vibe-game",
  "version": "2.0.0",
  "description": "A p5.js geometric space shooter survival game with procedural graphics",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "index.html",
  "scripts": {
    "serve": "bun run serve:express",
    "serve:express": "bun --bun scripts/dev-server.js",
    "prepare:assets": "node scripts/prepare-assets.js",
    "predev": "bunx kill-port 5500 3001",
    "dev": "bun run serve",
    "dev:parallel": "bun run serve",
    "dev:fresh": "bun run predev && bun run dev",
    "test": "bun run test:comprehensive",
    "test:playwright": "bunx playwright test",
    "test:headed": "bunx playwright test --headed",
    "test:debug": "bunx playwright test --debug",
    "test:mcp": "echo deprecated mcp runner; use Playwright directly",
    "test:probes": "echo deprecated mcp runner; use Playwright directly",
    "test:comprehensive": "bun run test:playwright",
    "api": "echo deprecated ticket API",
    "coderabbit:pull": "echo deprecated",
    "coderabbit:fetch-complete": "echo deprecated",
    "coderabbit:analyze": "echo deprecated",
    "coderabbit:auto-tickets": "echo deprecated",
    "coderabbit:resolve-outdated": "echo deprecated",
    "coderabbit:workflow": "echo deprecated",
    "coderabbit:cycle": "echo deprecated",
    "setup": "cp .env.example .env && echo 'Please edit .env with your GitHub token'",
    "validate-env": "echo Skipped legacy env validation; use packages/tooling/src/githubIssueManager.js",
    "lint": "bunx eslint --cache packages scripts",
    "lint:fix": "bunx eslint --cache --fix packages scripts",
    "format": "bunx prettier --write \"**/*.{js,md,json}\"",
    "format:check": "bunx prettier --check \"**/*.{js,md,json}\"",
    "scan:ansi": "bun --bun scripts/scan/ansi-scan.js",
    "scan:math": "bun --bun scripts/scan/scan-math.js",
    "scan:secrets": "bun --bun scripts/scan/secret-scan.js",
    "scan:no-tier3-globals": "bun scripts/scan/scan-no-tier3-globals.js",
    "scan:no-tier3-globals:strict": "set NO_TIER3_GLOBALS_STRICT=1&& bun scripts/scan/scan-no-tier3-globals.js",
    "hooks:install": "scripts\\install-hooks.cmd",
    "docs:branch-status": "scripts\\generate-branch-status.cmd",
    "clean": "Remove-Item -Recurse -Force node_modules, bun.lockb -ErrorAction SilentlyContinue",
    "fresh": "bun run clean && bun install",
    "test:enhanced": "node scripts/enhanced-testing-system.js",
    "env:setup": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1",
    "env:check": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1 -TestOnly",
    "tickets:new": "bun run scripts/tickets/new-ticket.js",
    "tickets:list": "bun run scripts/tickets/list-tickets.js",
    "tickets:validate": "bun run scripts/tickets/validate-tickets.js",
    "tickets:index": "bun run scripts/tickets/index-tickets.js",
    "tickets:batch-resolve": "bun run scripts/batch-resolve-tickets.js",
    "cleanup:debug": "bun run scripts/cleanup-debug.js",
    "ticket:create": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "ticket:update": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "ticket:get": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "ticket:list": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "ticket:latest": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "ticket:check": "echo deprecated; use packages/tooling/src/githubIssueManager.js",
    "monitor:dc": "bun --bun scripts/monitor/desktopCommanderHealth.js --port=4333",
    "restart:dc": "bun --bun scripts/monitor/restart-desktopCommander.js"
  },
  "bun": {
    "dev": {
      "port": 5500,
      "hot": true,
      "watch": [
        "packages/**/*.js",
        "index.html",
        "*.css"
      ]
    },
    "test": {
      "preload": [
        "./test-setup.js"
      ]
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.0.0",
    "five-server": "^0.4.4",
    "kill-port": "^2.0.1",
    "live-server": "^1.2.2",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "vitest": "^3.2.2",
    "compression": "^1.8.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "p5": "^1.7.0"
  },
  "keywords": [
    "game",
    "p5js",
    "javascript",
    "space-shooter",
    "procedural-graphics",
    "geometric-art"
  ],
  "author": "Vibe Game Developer",
  "license": "MIT"
}
