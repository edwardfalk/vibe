{
  "name": "vibe-game",
  "version": "2.0.0",
  "description": "A p5.js geometric space shooter survival game with procedural graphics",
  "type": "module",
  "workspaces": ["packages/*"],
  "main": "index.html",
  "scripts": {
    "serve": "bun run five-server --port=5500",
    "watch-bugs": "bun run scripts/move-bug-reports.js",
    "predev": "bunx kill-port 5500 3001",
    "dev": "concurrently -r --kill-others-on-fail \"bun run serve\" \"bun run watch-bugs\" \"bun run api\"",
    "dev:parallel": "bun run --parallel serve watch-bugs api",
    "dev:fresh": "bun run predev && bun run dev",
    "test": "bun run test:comprehensive",
    "test:playwright": "bunx playwright test",
    "test:headed": "bunx playwright test --headed",
    "test:debug": "bunx playwright test --debug",
    "test:mcp": "bun run scripts/run-mcp-tests.js",
    "test:comprehensive": "bun run test:playwright && bun run test:mcp",
    "api": "bun run ticket-api.js",
    "coderabbit:pull": "bun pull-coderabbit-reviews.js",
    "coderabbit:fetch-complete": "bun fetch-complete-coderabbit-reviews.js",
    "coderabbit:analyze": "bun analyze-coderabbit-data.js",
    "coderabbit:auto-tickets": "bun coderabbit-auto-tickets.js",
    "coderabbit:resolve-outdated": "bun resolve-outdated-coderabbit-tickets.js",
    "coderabbit:workflow": "bun coderabbit-ticket-workflow.js",
    "coderabbit:cycle": "bun run coderabbit:fetch-complete && bun run coderabbit:analyze && bun run coderabbit:workflow",
    "setup": "cp .env.example .env && echo 'Please edit .env with your GitHub token'",
    "validate-env": "node -e \"import('./js/config.js').then(() => console.log('âœ… Environment validation passed'))\"",
    "lint": "bunx eslint --cache --ext .js \"packages/**/*.js\" \"scripts/**/*.js\" \"js/**/*.js\" \"*.js\"",
    "lint:fix": "bunx eslint --cache --fix --ext .js \"packages/**/*.js\" \"scripts/**/*.js\" \"js/**/*.js\" \"*.js\"",
    "format": "bunx prettier --write \"**/*.{js,md,json}\"",
    "clean": "Remove-Item -Recurse -Force node_modules, bun.lockb -ErrorAction SilentlyContinue",
    "fresh": "bun run clean && bun install",
    "test:enhanced": "node scripts/enhanced-testing-system.js",
    "env:setup": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1",
    "env:check": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1 -TestOnly",
    "tickets:update": "bun run scripts/update-ticket-status.js",
    "tickets:batch-resolve": "bun run scripts/batch-resolve-tickets.js",
    "cleanup:debug": "bun run scripts/cleanup-debug.js",
    "ticket:create": "bun run scripts/ticket-cli.js create --",
    "ticket:update": "bun run scripts/ticket-cli.js update --",
    "ticket:get": "bun run scripts/ticket-cli.js get --",
    "ticket:list": "bun run scripts/ticket-cli.js list --",
    "ticket:latest": "bun run scripts/ticket-cli.js latest --",
    "ticket:check": "bun run scripts/ticket-cli.js check --"
  },
  "bun": {
    "dev": {
      "port": 5500,
      "hot": true,
      "watch": ["js/**/*.js", "index.html", "*.css"]
    },
    "test": {
      "preload": ["./test-setup.js"]
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "@playwright/test": "^1.53.0",
    "five-server": "^0.4.4",
    "kill-port": "^2.0.1",
    "live-server": "^1.2.2",
    "playwright": "^1.53.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "p5": "^1.7.0",
    "test": "^3.3.0",
    "zod": "^3.25.56"
  },
  "keywords": [
    "game",
    "p5js",
    "javascript",
    "space-shooter",
    "procedural-graphics",
    "geometric-art"
  ],
  "author": "Vibe Game Developer",
  "license": "MIT"
}
