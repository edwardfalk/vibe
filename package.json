{
  "name": "vibe-game",
  "version": "2.0.0",
  "description": "A p5.js geometric space shooter survival game with procedural graphics",
  "type": "module",
  "workspaces": ["packages/*"],
  "main": "index.html",
  "scripts": {
    "serve": "bun run five-server --port=5500 --root=public --spa --ignore=playwright-report,test-results,coderabbit-reviews",
    "predev": "bunx kill-port 5500 3001",
    "dev": "bun run serve",
    "dev:fresh": "bun run predev && bun run serve",
    "test": "bun run test:comprehensive",
    "test:playwright": "bunx playwright test",
    "test:headed": "bunx playwright test --headed",
    "test:debug": "bunx playwright test --debug",
    "test:mcp": "bun run test:orchestrated",
    "test:probes": "bun run test:orchestrated",
    "test:cli": "vitest run tests/cli/",
    "test:comprehensive": "bun run test:playwright && bun run test:mcp",
    "coderabbit:auto-tickets": "bun coderabbit-auto-tickets.js",
    "coderabbit:resolve-outdated": "bun resolve-outdated-coderabbit-tickets.js",
    "coderabbit:workflow": "bun coderabbit-ticket-workflow.js",
    "coderabbit:fetch-new": "bun run scripts/fetch-new-coderabbit-reviews.js",
    "setup": "cp .env.example .env && echo 'Please edit .env with your GitHub token'",
    "validate-env": "bun --eval \"import('./packages/core/src/config.js').then(() => console.log('âœ… Environment validation passed'))\"",
    "lint": "bunx eslint --cache --ext .js \"packages/**/*.js\" \"scripts/**/*.js\" \"*.js\"",
    "lint:fix": "bunx eslint --cache --fix --ext .js \"packages/**/*.js\" \"scripts/**/*.js\" \"*.js\"",
    "format": "bunx prettier --write \"**/*.{js,md,json}\"",
    "clean": "Remove-Item -Recurse -Force node_modules, bun.lockb -ErrorAction SilentlyContinue",
    "fresh": "bun run clean && bun install",
    "test:enhanced": "bun run scripts/enhanced-testing-system.js",
    "env:setup": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1",
    "env:check": "pwsh -ExecutionPolicy Bypass -File scripts/powershell/setup-windows-environment.ps1 -TestOnly",
    "cleanup:debug": "bun run scripts/cleanup-debug.js",
    "cleanup:docs-archive": "bun run scripts/prune-archive-docs.js",
    "validate:sounds": "bun run scripts/validate-sounds.js",
    "test:audio": "bun run scripts/audit-audio-manifest.js",
    "generate:pw-rules": "bun run scripts/generate-playwright-rules.js",
    "probe:liveness": "bunx playwright test tests/startup-black-screen-probe.test.js",
    "docs:check-links": "bun run scripts/check-doc-links.js",
    "ci:check-doc-drift": "bun run scripts/check-doc-drift.js",
    "docs:serve": "bun run docs:build-index && bunx docsify-cli@latest serve docs-site",
    "docs:build-index": "bun run scripts/generate-rule-index.js",
    "gen:changelog": "bun run scripts/generate-changelog.js",
    "scan:secrets": "bun run scripts/scan-secrets.js",
    "scan:consistency": "bun run scripts/check-consistency.js",
    "scan:instance": "bun run scripts/check-consistency.js instance",
    "scan:math": "bun run scripts/check-consistency.js math",
    "hooks:install": "git config core.hooksPath .githooks",
    "hooks:verify": "git config --get core.hooksPath | cat",
    "test:orchestrated": "bun run scan:consistency && bun run validate:sounds && bun run dev:start && bunx playwright test && bun run dev:stop",
    "mcp": "desktop-commander --port 4333 --allowedDirectories \"['D:\\\\projects','C:\\\\']\"",
    "dev:start": "bun run scripts/dev-server.js start",
    "dev:stop": "bun run scripts/dev-server.js stop",
    "dev:status": "bun run scripts/dev-server.js status",
    "dev:restart": "bun run scripts/dev-server.js restart",
    "docs:cache-context7": "bun run scripts/cache-context7-docs.js",
    "cursor:fix": "powershell -ExecutionPolicy Bypass -File scripts/patch-cursor-shell.ps1",
    "powershell:emergency-fix": "powershell -ExecutionPolicy Bypass -File scripts/emergency-powershell-fix.ps1",
    "powershell:try-beta": "powershell -ExecutionPolicy Bypass -File scripts/try-psreadline-beta.ps1",
    "powershell:try-beta-revert": "powershell -ExecutionPolicy Bypass -File scripts/try-psreadline-beta.ps1 -Revert",
    "powershell:update": "powershell -ExecutionPolicy Bypass -File scripts/update-psreadline-progressive.ps1",
    "powershell:update-beta": "powershell -ExecutionPolicy Bypass -File scripts/update-psreadline-progressive.ps1 -Beta",
    "powershell:revert-stable": "powershell -ExecutionPolicy Bypass -c \"Install-Module PSReadLine -RequiredVersion 2.3.6 -Force -Scope CurrentUser -AllowClobber; Write-Host 'Reverted to stable 2.3.6' -ForegroundColor Green\""
  },
  "bun": {
    "dev": {
      "port": 5500,
      "hot": true,
      "watch": ["packages/**/*.js", "index.html", "*.css"]
    },
    "test": {
      "preload": ["./test-setup.js"]
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "five-server": "^0.4.4",
    "kill-port": "^2.0.1",
    "live-server": "^1.2.2",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsx": "^4.19.4",
    "vitest": "^3.2.2",
    "docsify-cli": "^4.4.4",
    "gray-matter": "^4.0.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "get-stream": "^9.0.1",
    "jszip": "^3.10.1",
    "minimist": "^1.2.8",
    "p5": "^1.7.0",
    "tone": "^14.8.50",
    "test": "^3.3.0",
    "zod": "^3.25.56"
  },
  "keywords": [
    "game",
    "p5js",
    "javascript",
    "space-shooter",
    "procedural-graphics",
    "geometric-art"
  ],
  "author": "Vibe Game Developer",
  "license": "MIT"
}
