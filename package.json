{
  "name": "vibe-game",
  "version": "2.0.0",
  "description": "A p5.js geometric space shooter survival game with procedural graphics",
  "main": "index.html",
  "scripts": {
    "serve": "five-server --port=5500",
    "watch-bugs": "node move-bug-reports.js",
    "predev": "npx kill-port 5500 3001",
    "dev": "concurrently \"npm run serve\" \"npm run watch-bugs\" \"npm run api\"",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:mcp": "node run-mcp-tests.js",
    "test:automated": "node automated-game-test.js",
    "test:comprehensive": "npm run test:automated && npm run test:mcp",
    "debug:probe": "node js/game-debugging-probe.js",
    "coderabbit:analyze": "node js/coderabbit-review-processor.js",
    "coderabbit:integrate": "node js/coderabbit-testing-integration.js",
    "coderabbit:workflow": "npm run coderabbit:integrate",
    "coderabbit:tickets": "node js/coderabbit-ticket-tracker.js",
    "coderabbit:list": "node js/coderabbit-ticket-tracker.js list",
    "coderabbit:stats": "node js/coderabbit-ticket-tracker.js stats",
    "api": "node ticket-api.js",
    "lint": "eslint \"**/*.js\"",
    "format": "prettier --write \"**/*.{js,md,json}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^9.1.2",
    "five-server": "^0.4.4",
    "live-server": "^1.2.2",
    "kill-port": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "p5": "^1.7.0"
  },
  "keywords": [
    "game",
    "p5js",
    "javascript",
    "space-shooter",
    "procedural-graphics",
    "geometric-art"
  ],
  "author": "Vibe Game Developer",
  "license": "MIT"
}
